@model ArgentinahtlMVC.Models.RateListModel

@{
    ViewBag.Title = "Listado de Tarifas de " + Model.Lodging.FirstName + " " + Model.Lodging.LastName;
    Layout = null;
    Html.EnableUnobtrusiveJavaScript();
    Html.EnableClientValidation();
}

<script type="text/javascript">
    $(function () {
        $('.link_options').colorbox();

        var ratesTable = $('table#Rates');

        if (ratesTable.length) {
            ratesTable.addClass('tablesorter').tablesorter({
                widgets: ['zebra', 'hover'],
                headers: {
                    0: { sorter: 'text' },
                    1: { sorter: 'datetime' },
                    2: { sorter: 'digit' },
                    3: { sorter: 'digit' },
                    4: { sorter: 'digit' },
                    5: { sorter: 'digit' },
                    6: { sorter: 'digit' },
                    7: { sorter: 'digit' },
                    8: { sorter: 'digit' },
                    9: { sorter: 'digit' },
                    10: { sorter: 'digit' },
                    11: { sorter: 'digit' },
                    12: { sorter: 'digit' },
                    13: { sorter: 'digit' },
                    14: { sorter: 'digit' },
                    15: { sorter: 'digit' },
                    16: { sorter: 'digit' }
                }
            })
            .children('thead').children('tr:first').find('*').removeClass('header').unbind('click');
            ratesTable.tablesorter();
        }
    });

    function enableDisableRate(id, enable) {
        var message = 'Error al guardar la tarifa.';
        var messageType = 'error';

        var action = '@(Url.Action("EnableRate", "Rate"))';
        if (!enable)
            action = '@(Url.Action("DisableRate", "Rate"))';

        showConfirmDialog('¿Seguro que desea continuar con la operación?', 'Sí', 'No',
            function ($noty) {
                // this = button element
                // $noty = $noty element

                $noty.close();

                $.ajax({
                    type: "POST",
                    url: action,
                    data: {
                        RateId: id
                    },
                    dataType: "json",
                    traditional: true,
                    success: function (data) {
                        if (data.success) {
                            message = 'Operación realizada con éxito';
                            messageType = 'success';
                        }

                        showNotification(message, messageType);

                        refreshRateList();
                    },
                    error: function (data) {
                        showNotification(message, messageType);

                        refreshRateList();
                    }
                });
            },
            function ($noty) {
                $noty.close();
                showNotification('La operación fue cancelada.', 'info')
            });

        return false;
    }

    function deleteRate(id) {
        var message = 'Error al eliminar la tarifa.';
        var messageType = 'error';

        showConfirmDialog('¿Seguro que desea eliminar la tarifa?', 'Sí', 'No',
            function($noty) {
                // this = button element
                // $noty = $noty element

                $noty.close();

                $.ajax({
                    type: "POST",
                    url: '@(Url.Action("DeleteRate", "Rate"))',
                    data: {
                        rateId: id
                    },
                    dataType: "json",
                    traditional: true,
                    success: function (data) {
                        if (data.success) {
                            message = 'Tarifa eliminada con éxito';
                            messageType = 'success';
                        }

                        showNotification(message, messageType);

                        refreshRateList();
                    },
                    error: function (data) {
                        showNotification(message, messageType);

                        refreshRateList();
                    }
                });
            },
            function($noty) {
                $noty.close();
                showNotification('La operación fue cancelada.', 'info');
            });

        return false;
    }
</script>

